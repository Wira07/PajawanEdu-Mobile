<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PajawanEduMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimaryDark">@color/primarydark</item>
        <item name="colorPrimary">@color/primarydark</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PajawanEduMobile" parent="Base.Theme.PajawanEduMobile" />

    <!-- Customized hint text appearance -->
    <style name="MyHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item> <!-- Ukuran teks hint -->
    </style>

    <!-- Active state text appearance -->
    <style name="BottomNavigationActiveText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <!-- Inactive state text appearance -->
    <style name="BottomNavigationInactiveText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <!-- Style for cut corners in shapes -->
    <style name="CutShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Style for CardView -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Widget.App.Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearance">@style/CutShape</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">3dp</item>
    </style>

