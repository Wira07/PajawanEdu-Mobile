<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abu"
    tools:context=".MainActivity">

    <!-- ScrollView untuk Konten Utama -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:layout_alignParentTop="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Halo, Wira!"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pajawanedu"
                    android:background="@drawable/circle_background"/>
            </RelativeLayout>

            <!-- Search bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:backgroundTint="#ffffff"
                android:background="@drawable/shape_3">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cari sesuatu"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:inputType="text" />
            </LinearLayout>

            <!-- Banner Kursus Kosakata Baru -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kursus kosakata baru sekarang tersedia"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mulai kursus"
                    android:backgroundTint="#6200EE"
                    android:textColor="#ffffff"
                    android:elevation="2dp"/>
            </LinearLayout>

            <!-- Bagian Artikel Teratas -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artikel teratas untuk Anda"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Artikel Matematika -->
            <LinearLayout
                android:id="@+id/cardMatematika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_courses"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/frontend"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menguasai Kosakata: Strategi Terbukti untuk Kata Bahasa Inggris yang Efisien..."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matematika • 5 menit"
                    android:textSize="14sp"
                    android:textColor="#888888"/>
            </LinearLayout>

            <!-- Artikel Bahasa Indonesia -->
            <LinearLayout
                android:id="@+id/cardBahasaIndonesia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_courses"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/frontend"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menguasai Kosakata: Strategi Terbukti untuk Kata Bahasa Inggris yang Efisien..."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bahasa Indonesia • 5 menit"
                    android:textSize="14sp"
                    android:textColor="#888888"/>
            </LinearLayout>

            <!-- Artikel IPAS -->
            <LinearLayout
                android:id="@+id/cardIpas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_courses"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ipas"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tujuan Pembelajaran

Peserta didik dapat mengidentifikasi sifat-sifat cahaya dalam kehidupan sehari-hari.
Peserta didik dapat menyimpulkan hasil percobaan mengenai sifat-sifat cahaya.

"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IPAS • 5 menit"
                    android:textSize="14sp"
                    android:textColor="#888888"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="12dp"
        app:itemIconTint="@color/itemColor"
        app:itemTextColor="@color/itemColor"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_item" />

</RelativeLayout>
